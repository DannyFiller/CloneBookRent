<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoBookActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivDetailED"
            android:layout_width="155dp"
            android:layout_height="215dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/tvTenSachDetailED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:text="TenSach"
            app:layout_constraintStart_toEndOf="@+id/ivDetailED"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGiaEDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Giá mua: "
            app:layout_constraintStart_toEndOf="@+id/ivDetailED"
            app:layout_constraintTop_toBottomOf="@+id/tvTenSachDetailED" />

        <TextView
            android:id="@+id/tvGiaED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="giá mua"
            app:layout_constraintStart_toEndOf="@+id/tvGiaEDLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvTenSachDetailED" />

        <TextView
            android:id="@+id/tvGiaThueEDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Giá thuê: "
            app:layout_constraintStart_toEndOf="@+id/ivDetailED"
            app:layout_constraintTop_toBottomOf="@+id/tvGiaEDLabel" />

        <TextView
            android:id="@+id/tvGiaThueED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/tvGiaThueEDLabel"
            app:layout_constraintTop_toBottomOf="@id/tvGiaEDLabel" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcSachTonKho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="236dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivDetailED" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Xóa"
            app:layout_constraintStart_toEndOf="@+id/ivDetailED"
            app:layout_constraintTop_toBottomOf="@+id/tvGiaThueEDLabel" />

        <Button
            android:id="@+id/btnSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Sửa"
            app:layout_constraintStart_toEndOf="@+id/ivDetailED"
            app:layout_constraintTop_toBottomOf="@+id/btnXoa" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>